{
  "name": "create-reason-react-app",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:bsb": "bsb -make-world",
    "build:webpack": "webpack --config config/webpack.config.prod.js",
    "clean": "npm-run-all clean:*",
    "clean:bsb": "bsb -clean-world",
    "clean:project": "rimraf dist/**/* lib .merlin 'src/**/*.js'",
    "dev": "npm run build:bsb && npm run dev:parallel",
    "dev:parallel": "npm-run-all --parallel dev:bsb dev:webpack",
    "dev:bsb": "npm run build:bsb -- -w",
    "dev:webpack": "webpack-dev-server -w --config config/webpack.config.dev.js",
    "now-start": "pushstate-server dist/build",
    "jest": "jest",
    "test": "npm-run-all build:bsb jest",
    "serve:static": "node scripts/serveStatic.js"
  },
  "keywords": [
    "reason",
    "react",
    "crra",
    "reason-react",
    "create-reason-react-app"
  ],
  "author": "Mateusz Zatorski",
  "license": "MIT",
  "dependencies": {
    "bs-director": "^0.0.1",
    "express": "^4.15.3",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "reason-react": "https://github.com/reasonml/reason-react.git"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "bs-jest": "^0.1.0",
    "bs-platform": "^1.7.4",
    "bs-react-test-renderer": "^1.0.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "npm-run-all": "^4.0.2",
    "postcss-flexbugs-fixes": "^3.0.0",
    "postcss-loader": "^2.0.5",
    "pushstate-server": "^3.0.0",
    "rimraf": "^2.6.1",
    "rollup-loader": "^0.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "style-loader": "^0.18.1",
    "sw-precache-webpack-plugin": "^0.11.3",
    "url-loader": "^0.5.8",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-manifest-plugin": "^1.1.0",
    "webpack-stats-plugin": "^0.1.5",
    "write-file-webpack-plugin": "^4.0.2"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "^src(.*)": "<rootDir>/src$1"
    }
  }
}
